<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="0.0.4-1" author="Andrey">
        <comment>Create log table</comment>

        <createTable tableName="debug" schemaName="log">
            <column name="id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="system_type_id" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>
            <column name="method_params" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="exception" schemaName="log">
            <column name="id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="system_type_id" type="VARCHAR(16)">
                <constraints nullable="false"/>
            </column>
            <column name="method_params" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>
