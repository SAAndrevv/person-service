<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="liga.medical.personservice.core.repository.UserToRoleMapper">

    <insert id="addUserRoles">
        insert into security.user_to_role (user_id, role_id) values
        <foreach collection="roles" item="role">
            (#{user.id}, #{role.id})
        </foreach>
    </insert>

</mapper>